<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_20_dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_20_dp"
            android:text="@string/head"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_22_sp"
            android:textStyle="bold" />
        <!-- book title -->

        <EditText
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_title"
            android:maxLines="1" />

        <!-- book's author -->


        <EditText
            android:id="@+id/bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_author"
            android:maxLines="1" />
        <!-- Reseaarch button -->
        <Button
            android:id="@+id/search_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:background="@color/colorAccent"
            android:text="@string/search_btn"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_22_sp" />
        <!--My bibliotheque button-->
        <Button
            android:id="@+id/my_bibliotheque_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:background="@color/colorBlack"
            android:text="@string/my_bibliotheque_btn"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_22_sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
